<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="10dip" />
            <gradient android:startColor="@color/white" android:centerColor="@color/white" android:endColor="@color/white" android:angle="270.0" android:centerY="5.0"  />
        </shape>
    </item>
   
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="10dip" />
                <gradient android:startColor="@color/lightred" android:centerColor="@color/lightblue" android:endColor="@color/lightblue" android:angle="270.0" android:centerY="5.0"  />
            </shape>
        </clip>
    </item>
</layer-list>