<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.drjq.mm"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="5dip" >

        <ImageView
            android:id="@+id/img_share_bigicon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_avatar_default" />

        <ImageView
            android:id="@+id/img_share_flower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="30dip"
            android:layout_marginTop="5dip"
            android:src="@drawable/fee_list_user_flower" />

        <TextView
            android:id="@+id/tv_share_message"
            android:layout_width="80dip"
            android:layout_height="20dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dip"
            android:layout_marginTop="45dip"
            android:background="@drawable/fee_list_user_msg"
            android:gravity="center"
            android:text="0人私信"
            android:textColor="@color/white"
            android:textSize="12dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/fee_list_user_bottom_bg"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingBottom="10dip" >

            <ImageView
                android:id="@+id/img_share_online"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_marginLeft="10dip"
                android:src="@drawable/fee_list_user_time" />

            <TextView
                android:id="@+id/tv_share_online"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/white"
                android:textSize="13dip" />

            <ImageView
                android:id="@+id/img_share_like"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_marginRight="5dip"
                android:src="@drawable/fee_list_user_like" />

            <TextView
                android:id="@+id/tv_share_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:text=""
                android:textColor="@color/white"
                android:textSize="12dip" />

            <ImageView
                android:id="@+id/img_share_replay"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_marginRight="5dip"
                android:src="@drawable/fee_list_user_replay" />

            <TextView
                android:id="@+id/tv_share_recevie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:text=""
                android:textColor="@color/white"
                android:textSize="12dip" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@color/white" >

        <com.zmv.zf.view.CircleImageView
            android:id="@+id/cimg_share_icon"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:src="@drawable/ic_avatar_default" />

        <TextView
            android:id="@+id/tv_share_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cimg_share_icon"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@+id/cimg_share_icon"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black"
            android:textSize="13dip" />

        <TextView
            android:id="@+id/tv_share_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_share_name"
            android:layout_alignBottom="@+id/tv_share_name"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@+id/tv_share_name"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/darkgray"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/tv_share_say"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cimg_share_icon"
            android:layout_alignLeft="@+id/tv_share_name"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black"
            android:textSize="13dip" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:padding="10dip" >

            <ImageView
                android:id="@+id/img_share_fans"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:src="@drawable/fee_list_user_fans" />

            <TextView
                android:id="@+id/tv_share_fans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_weight="1.1"
                android:gravity="center"
                android:singleLine="true"
                android:text="0人关注"
                android:textColor="@color/lightred"
                android:textSize="13dip" />

            <View
                android:layout_width="0.2dip"
                android:layout_height="match_parent"
                android:background="@color/darkgray" />

            <ImageView
                android:id="@+id/img_share_videos"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_marginLeft="5dip"
                android:src="@drawable/fee_list_user_videos" />

            <TextView
                android:id="@+id/tv_share_videos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_weight="1.1"
                android:gravity="center"
                android:singleLine="true"
                android:text="0个视频"
                android:textColor="@color/lightred"
                android:textSize="13dip" />

            <View
                android:layout_width="0.2dip"
                android:layout_height="match_parent"
                android:background="@color/darkgray" />

            <ImageView
                android:id="@+id/img_share_see"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_marginLeft="5dip"
                android:src="@drawable/fee_list_user_plays" />

            <TextView
                android:id="@+id/tv_share_plays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="0次播放"
                android:textColor="@color/lightred"
                android:textSize="13dip" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>