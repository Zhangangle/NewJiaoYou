<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/basic_top" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dip"
        android:background="@drawable/feevideo_homepage_bg" >

        <com.zmv.zf.view.CircleImageView
            android:id="@+id/cimg_per_icon"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:src="@drawable/ic_avatar_default" />

        <TextView
            android:id="@+id/tv_per_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cimg_per_icon"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@+id/cimg_per_icon"
            android:singleLine="true"
            android:text="苏菲"
            android:textColor="@color/white"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/tv_per_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_per_name"
            android:layout_alignBottom="@+id/tv_per_name"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@+id/tv_per_name"
            android:singleLine="true"
            android:text="24岁，网络主播 江苏 苏州"
            android:textColor="@color/gray"
            android:textSize="12dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/feevideo_bttom_bg"
            android:gravity="center_vertical" >

            <LinearLayout
                android:id="@+id/llayout_per_hot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/img_per_hot"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:src="@drawable/topic_fee_hot" />

                <TextView
                    android:id="@+id/tv_per_hot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="热门视频"
                    android:textColor="@color/white"
                    android:textSize="13dip" />
            </LinearLayout>

            <View
                android:layout_width="0.2dip"
                android:layout_height="30dip"
                android:background="@color/white" />

            <LinearLayout
                android:id="@+id/llayout_per_new"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/img_per_new"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_marginLeft="5dip"
                    android:src="@drawable/topic_fee_new" />

                <TextView
                    android:id="@+id/tv_per_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="最新视频"
                    android:textColor="@color/white"
                    android:textSize="13dip" />
            </LinearLayout>

            <View
                android:layout_width="0.2dip"
                android:layout_height="30dip"
                android:background="@color/white" />

            <LinearLayout
                android:id="@+id/llayout_per_xiangce"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/img_per_xiangce"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_marginLeft="5dip"
                    android:src="@drawable/topic_fee_xiangce" />

                <TextView
                    android:id="@+id/tv_per_xiangce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="私房美照"
                    android:textColor="@color/white"
                    android:textSize="13dip" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" >

            <View
                android:id="@+id/view_per_hot"
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:layout_weight="1"
                android:background="@drawable/p_line" />

            <View
                android:id="@+id/view_per_new"
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:layout_weight="1"
                android:background="@color/transparent" />

            <View
                android:id="@+id/view_per_xiangce"
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:layout_weight="1"
                android:background="@color/transparent" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_per_say"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:layout_alignBottom="@+id/cimg_per_icon"
            android:layout_marginBottom="25dip"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@+id/cimg_per_icon"
            android:gravity="center"
            android:singleLine="true"
            android:text="女人应该对自己好一点"
            android:textColor="@color/gray"
            android:textSize="12dip" />

        <LinearLayout
            android:id="@+id/layout_play"
            android:layout_width="wrap_content"
            android:layout_height="25dip"
            android:layout_alignBottom="@+id/cimg_per_icon"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@+id/cimg_per_icon"
            android:background="@drawable/topic_fee_playnum_bg"
            android:gravity="center"
            android:paddingLeft="5dip"
            android:paddingRight="5dip" >

            <ImageView
                android:id="@+id/img_play"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:src="@drawable/topic_fee_playnum" />

            <TextView
                android:id="@+id/tv_per_playnums"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="8.2万次播放"
                android:textColor="@color/white"
                android:textSize="12dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="25dip"
            android:layout_alignBottom="@+id/cimg_per_icon"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+id/layout_play"
            android:background="@drawable/topic_fee_flower_bg"
            android:gravity="center"
            android:paddingLeft="5dip"
            android:paddingRight="5dip" >

            <ImageView
                android:id="@+id/img_flower"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:src="@drawable/fee_list_user_flower" />

            <TextView
                android:id="@+id/tv_per_flower"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="8200人送花"
                android:textColor="@color/white"
                android:textSize="12dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/cimg_per_icon"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:padding="10dip" >

            <ImageView
                android:id="@+id/img_per_videos"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:src="@drawable/fee_user_page_vidweonp" />

            <TextView
                android:id="@+id/tv_per_videos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:gravity="center"
                android:singleLine="true"
                android:text="736个视频"
                android:textColor="@color/gray"
                android:textSize="12dip" />

            <View
                android:layout_width="0.2dip"
                android:layout_height="match_parent"
                android:background="@color/gray" />

            <ImageView
                android:id="@+id/img_per_fans"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_marginLeft="5dip"
                android:src="@drawable/fee_user_page_fans" />

            <TextView
                android:id="@+id/tv_per_fans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:gravity="center"
                android:singleLine="true"
                android:text="736人关注"
                android:textColor="@color/gray"
                android:textSize="12dip" />

            <View
                android:layout_width="0.2dip"
                android:layout_height="match_parent"
                android:background="@color/gray" />

            <ImageView
                android:id="@+id/img_per_see"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_marginLeft="5dip"
                android:src="@drawable/fee_user_page_time" />

            <TextView
                android:id="@+id/tv_per_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:gravity="center"
                android:singleLine="true"
                android:text="5天前在线"
                android:textColor="@color/gray"
                android:textSize="12dip" />
        </LinearLayout>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vPager_person"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_weight="1"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="@color/lightgray"
        android:gravity="center"
        android:padding="2dip" >

        <Button
            android:id="@+id/btn_per_msg"
            android:layout_width="90dip"
            android:layout_height="36dip"
            android:layout_marginRight="80dip"
            android:background="@drawable/shape_redtext"
            android:gravity="center"
            android:text="@string/str_per_msg"
            android:textColor="@color/white"
            android:textSize="15dip" />

        <Button
            android:id="@+id/btn_per_guanzhu"
            android:layout_width="90dip"
            android:layout_height="36dip"
            android:background="@drawable/shape_redtext"
            android:gravity="center"
            android:text="@string/str_per_guanzhu"
            android:textColor="@color/white"
            android:textSize="15dip" />
    </LinearLayout>

</LinearLayout>